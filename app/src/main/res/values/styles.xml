<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="header_text">
        <item name="android:textColor">@color/headerText</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="normal_text">
        <item name="android:textColor">@color/normalText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="small_text">
        <item name="android:textColor">@color/softText</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>